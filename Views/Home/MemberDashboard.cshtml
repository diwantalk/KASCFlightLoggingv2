@{
    ViewData["Title"] = "Member Dashboard";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0"><i class="bi bi-person-workspace"></i> Member Dashboard</h2>
            <p class="text-muted">Welcome to your personal flight management portal</p>
        </div>
        <div>
            <a asp-controller="FlightLogs" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Flight Log
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Quick Stats -->
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm bg-primary bg-gradient text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-white bg-opacity-25 p-3 me-3">
                            <i class="bi bi-clock-history fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-0">Total Flight Hours</h6>
                            <h3 class="mb-0">125.5</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm bg-success bg-gradient text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-white bg-opacity-25 p-3 me-3">
                            <i class="bi bi-calendar-check fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-0">Flights This Month</h6>
                            <h3 class="mb-0">8</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm bg-info bg-gradient text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-white bg-opacity-25 p-3 me-3">
                            <i class="bi bi-award fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-0">Certifications</h6>
                            <h3 class="mb-0">2</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm bg-warning bg-gradient text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-white bg-opacity-25 p-3 me-3">
                            <i class="bi bi-calendar2-event fs-4"></i>
                        </div>
                        <div>
                            <h6 class="mb-0">Upcoming Flights</h6>
                            <h3 class="mb-0">3</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-airplane-engines"></i> Active Flights
                        </h5>
                        <div class="d-flex gap-2">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar3"></i></span>
                                <input type="date" id="flightDate" class="form-control" />
                            </div>
                            <button class="btn btn-outline-secondary">
                                <i class="bi bi-filter"></i> Filter
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="bi bi-calendar2"></i> Date</th>
                                    <th><i class="bi bi-airplane"></i> Aircraft</th>
                                    <th><i class="bi bi-person"></i> Pilot</th>
                                    <th><i class="bi bi-info-circle"></i> Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2024-01-20</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/aircraft/c172.jpg" class="rounded me-2" alt="Aircraft" style="width: 50px; height: 50px; object-fit: cover;">
                                            C172
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/avatars/default.jpg" class="rounded-circle me-2" alt="Pilot" style="width: 40px; height: 40px; object-fit: cover;">
                                            John Doe
                                        </div>
                                    </td>
                                    <td><span class="badge bg-success rounded-pill"><i class="bi bi-check-circle"></i> Active</span></td>
                                    <td>
                                        <a asp-controller="FlightLogs" asp-action="Details" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-week"></i> Flight Schedule
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item px-0">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                        <i class="bi bi-calendar2-check text-primary fs-4"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Training Flight</h6>
                                        <small class="text-muted">Tomorrow at 10:00 AM</small>
                                    </div>
                                </div>
                                <a asp-controller="FlightLogs" asp-action="Edit" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </div>
                        <div class="list-group-item px-0">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3">
                                        <i class="bi bi-calendar2-plus text-info fs-4"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Cross-Country Flight</h6>
                                        <small class="text-muted">Jan 25, 2024 at 2:00 PM</small>
                                    </div>
                                </div>
                                <a asp-controller="FlightLogs" asp-action="Edit" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-controller="FlightLogs" asp-action="Schedule" class="btn btn-outline-primary w-100">
                        <i class="bi bi-plus-circle"></i> Schedule New Flight
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">
                        <i class="bi bi-airplane"></i> Available Aircraft
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item px-0">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <img src="~/images/aircraft/c172.jpg" class="rounded me-3" alt="Cessna 172" style="width: 80px; height: 60px; object-fit: cover;">
                                    <div>
                                        <h6 class="mb-0">Cessna 172 (N12345)</h6>
                                        <small class="text-muted">4-seater, Single Engine</small>
                                        <div class="mt-1">
                                            <span class="badge bg-success rounded-pill">Available</span>
                                            <span class="badge bg-secondary rounded-pill">IFR Equipped</span>
                                        </div>
                                    </div>
                                </div>
                                <a asp-controller="Aircraft" asp-action="Book" class="btn btn-sm btn-success">
                                    <i class="bi bi-calendar-plus"></i> Book
                                </a>
                            </div>
                        </div>
                        <div class="list-group-item px-0">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <img src="~/images/aircraft/pa28.jpg" class="rounded me-3" alt="Piper PA-28" style="width: 80px; height: 60px; object-fit: cover;">
                                    <div>
                                        <h6 class="mb-0">Piper PA-28 (N67890)</h6>
                                        <small class="text-muted">4-seater, Single Engine</small>
                                        <div class="mt-1">
                                            <span class="badge bg-warning rounded-pill">In Maintenance</span>
                                            <span class="badge bg-secondary rounded-pill">VFR Only</span>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-sm btn-secondary" disabled>
                                    <i class="bi bi-wrench"></i> Unavailable
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-controller="Aircraft" asp-action="Index" class="btn btn-outline-primary w-100">
                        <i class="bi bi-grid"></i> View All Aircraft
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

