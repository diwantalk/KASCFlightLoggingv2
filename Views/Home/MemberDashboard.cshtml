@{
    ViewData["Title"] = "Member Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">Member Dashboard</h2>
    
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Active Flights</h5>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text">Date</span>
                                <input type="date" id="flightDate" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Aircraft</th>
                                    <th>Pilot</th>
                                    <th>Status</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Sample data - will be replaced with real data -->
                                <tr>
                                    <td>2024-01-20</td>
                                    <td>C172</td>
                                    <td>John Doe</td>
                                    <td><span class="badge bg-success">Active</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-info">View Details</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Flight Schedule</h5>
                    <div id="calendar" class="mt-3">
                        <!-- Calendar will be initialized here -->
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Available Aircraft</h5>
                    <div class="list-group">
                        <!-- Sample data - will be replaced with real data -->
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Cessna 172 (N12345)</h6>
                                <span class="badge bg-success">Available</span>
                            </div>
                            <p class="mb-1">4-seater, Single Engine</p>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Piper PA-28 (N67890)</h6>
                                <span class="badge bg-warning">In Maintenance</span>
                            </div>
                            <p class="mb-1">4-seater, Single Engine</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

