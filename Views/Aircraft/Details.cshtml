@model KASCFlightLogging.Models.Aircraft

@{
    ViewData["Title"] = "Aircraft Details";
}

<h1>Aircraft Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            Aircraft Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AircraftType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@if (Model.FlightLogs != null && Model.FlightLogs.Any())
{
    <div class="mt-4">
        <h3>Flight Logs</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.FlightLogs.OrderByDescending(l => l.Date))
                {
                    <tr>
                        <td>@log.User.UserName</td>
                        <td>@log.Date.ToShortDateString()</td>
                        <td>@log.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}